{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
